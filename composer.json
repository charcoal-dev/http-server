{
  "name": "charcoal-dev/http-server",
  "description": "HTTP router for Charcoal Apps",
  "type": "library",
  "homepage": "https://github.com/charcoal-dev/http-server",
  "license": "MIT",
  "replace": {
    "charcoal/http-router": "self.version"
  },
  "authors": [
    {
      "name": "Furqan A. Siddiqui",
      "email": "hello@furqansiddiqui.com",
      "homepage": "https://www.furqansiddiqui.com",
      "role": "Author"
    }
  ],
  "require": {
    "php": "^8.3",
    "charcoal-dev/contracts": "^0.1.18",
    "charcoal-dev/base": "^0.2.2",
    "charcoal-dev/buffers": "^0.2.4",
    "charcoal-dev/http-commons": "^0.2.31",
    "charcoal-dev/http-trust-proxy": "^0.1.1",
    "ext-ctype": "*",
    "ext-mbstring": "*"
  },
  "suggest": {
    "ext-simplexml": "*"
  },
  "autoload": {
    "psr-4": {
      "Charcoal\\Http\\Server\\": [
        "src"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Charcoal\\Http\\Tests\\Server\\": "tests/"
    }
  },
  "minimum-stability": "dev"
}